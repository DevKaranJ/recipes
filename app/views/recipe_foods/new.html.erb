<%= stylesheet_link_tag "recipe_food" %>
<%= form_with(model: [@user, @recipe, @recipe_food]) do |form| %>
    <div class="field">
      <%= form.label :food_id %>
      <%= form.collection_select(:food_id, Food.all, :id, :name) %>
    </div>
  
    <div class="field">
      <%= form.label :quantity %>
      <%= form.number_field :quantity %>
    </div>
  
    <%= form.submit %>
  <% end %>
