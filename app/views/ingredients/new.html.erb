<%= form_with(model: [@recipe, @ingredient], local: true) do |form| %>
  <div class="field">
    <%= form.label :food_name %>
    <%= form.text_field :food_name %>
  </div>

  <div class="field">
    <%= form.label :quantity %>
    <%= form.number_field :quantity %>
  </div>

  <div class="field">
    <%= form.label :value %>
    <%= form.text_field :value %>
  </div>

  <div class="actions">
    <%= form.submit "Add Ingredient", class: "btn btn-primary" %>
  </div>
<% end %>
