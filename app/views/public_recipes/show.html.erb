<%= stylesheet_link_tag "public_recipes_details" %>
<h1><%= @recipe.name %></h1>
<p><%= @recipe.description %></p>
<p>Preparation Time: <%= @recipe.preparation_time %> minutes</p>
<p>Cooking Time: <%= @recipe.cooking_time %> minutes</p>


<h2>Ingredients</h2>

<table class="ingredients-table">
  <thead>
    <tr>
      <th>Food Name</th>
      <th>Quantity</th>
      <th>Value</th>
    </tr>
  </thead>
  <tbody>
    <% @recipe.ingredients.each do |ingredient| %>
      <tr>
        <td><%= ingredient.food_name %></td>
        <td><%= "#{ingredient.quantity} #{ingredient.quantity_unit}" %></td>
        <td><%= ingredient.value %></td>
      </tr>
    <% end %>
  </tbody>
</table>
