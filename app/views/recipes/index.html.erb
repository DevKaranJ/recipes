<%= stylesheet_link_tag "recipes" %>

<div class="container">
  <h1>Recipes List</h1>

  <% @recipes.each do |recipe| %>
    <div class="recipe_container">
      <div class="recipe_info">
        <h2> <%= link_to recipe.name, user_recipes_path(@user) %> </h2>
        <p> <%= button_to "Remove", user_recipe_path(@user, recipe), method: :delete, data: { confirm: 'Are you sure?' }, class: 'button_remove' %> </p>
      </div>
      <div class="description">
        <h3><%= recipe.description %></h3>
      </div>
    </div>
  <% end %>
  <%= link_to 'New Recipe', new_user_recipe_path(@user) %>
</div>
