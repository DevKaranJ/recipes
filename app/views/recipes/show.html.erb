<%= stylesheet_link_tag "recipedetails" %>

<div class="container">
  <h1><%= @recipe.name %></h1>
  <div class="details">
    <p>Preparation Time: <%= @recipe.preparation_time %> minutes</p>
    <p>Cooking Time: <%= @recipe.cooking_time %> minutes</p>
    <p>Description: <%= @recipe.description %></p>
    <p>Public: <%= @recipe.public ? 'Yes' : 'No' %></p>
    <% if @recipe.user == current_user %>
      <%= link_to "Generate Shopping List (Coming Soon)", "#", class: "btn btn-primary disabled" %>
      <%= link_to "Add Ingredients ", "#", class: "btn btn-primary disabled" %>
    <% end %>
  </div>
</div>
