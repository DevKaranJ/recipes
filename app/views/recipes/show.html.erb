<%= stylesheet_link_tag "recipedetails" %>

<div class="container">
  <h1><%= @recipe.name %></h1>
  <div class="details">
    <p>Preparation Time: <%= @recipe.preparation_time %> minutes</p>
    <p>Cooking Time: <%= @recipe.cooking_time %> minutes</p>
    <p>Description: <%= @recipe.description %></p>
    <p>Public: <%= @recipe.public ? 'Yes' : 'No' %></p>

    <% if @recipe.user == current_user %>
      <%= link_to "Generate Shopping List (Coming Soon)", "#", class: "btn btn-primary disabled" %>
      <%= link_to "Add Ingredients", new_recipe_ingredient_path(@recipe), class: "btn btn-primary" %>
    <% end %>

    <h2>Ingredients</h2>
    <ul>
    <% @recipe.ingredients.each do |ingredient| %>
      <p><%= ingredient.food_name %> - <%= ingredient.quantity %> <%= ingredient.value %></p>
      <%= link_to "Edit", edit_recipe_ingredient_path(@recipe, ingredient), class: "btn btn-primary" %>
      <%= button_to "Delete", recipe_ingredient_path(@recipe, ingredient), method: :delete, data: { confirm: "Are you sure you want to delete this ingredient?" }, class: "btn btn-danger" %>
    <% end %>

    </ul>
  </div>
</div>
