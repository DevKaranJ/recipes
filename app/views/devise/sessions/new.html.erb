<%= stylesheet_link_tag "login" %>

<div class="login-container">
  <div class="login-header">
    <h1><%= @welcome_message %></h1>
    <h2>Login</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "login-form" }) do |f| %>
    <div class="field">
      <%= f.label :email, class: "field-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "field-input" %>
    </div>

    <div class="field">
      <%= f.label :password, class: "field-label" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "field-input" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me, class: "field-checkbox" %>
        <%= f.label :remember_me, class: "field-label" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: "submit-button" %>
    </div>
  <% end %>

  <div class="login-footer">
    <%= render "devise/shared/links" %>
  </div>
</div>
