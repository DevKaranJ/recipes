<%= stylesheet_link_tag "new_invent" %>
<h1>New Inventory</h1>

<%= form_with(model: [@user, @inventory], url: user_inventories_path(@user), local: true) do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.submit 'Create Inventory' %>
  </div>
<% end %>
